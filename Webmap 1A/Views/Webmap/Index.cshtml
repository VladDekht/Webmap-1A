

@{
    Layout = "~/Views/Webmap/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Main";
}

@section NavigationBar{
    <head>
        <link type="text/css" href="~/Content/main.css" rel="stylesheet" />
    </head>
    <div class="panel">
        <div class="row" id="navbar">
            <div class="col-md-2 bordered  styled" id="info-section">
                <p>Information about dispatcher</p>
                <div class="btn-group-horizontal btn-group-sm">
                    <button type="button" class="btn btn-secondary">Sign in</button>
                    <button type="button" class="btn btn-secondary">Sign out</button>
                </div>
            </div>
            <div class="col-md-2 bordered" id="order-section">
                <p>Auftrag / Order</p>
                <div class="btn-group-horizontal btn-group-sm">
                    @*<button type="button" class="btn btn-primary new-order-button" data-toggle="modal" data-target="#newOrder">New order</button>*@
                    <button type="button" class="btn btn-primary new-order-button" id="new-order-button" onclick="openOrderForm()">New order</button>
                    <button type="button" class="btn btn-secondary" id="cancel-order-button" onclick="closeOrderForm()">Cancel</button>
                </div>
            </div>
            <div class="col-md-1 bordered" id="zone1-section" style="padding-bottom: 0px;">
                <p>Zone 1</p>
                <div class="btn-group-horizontal btn-group-sm">
                    <button type="button" class="btn btn-secondary btn-sm" id="zone1-button-edit">Edit</button>
                    <button type="button" class="btn btn-secondary btn-sm" id="zone1-button-save">Save</button>
                </div>
            </div>
            <div class="col-md-1 bordered" id="zone2-section">
                <p>Zone 2</p>
                <div class="btn-group-horizontal btn-group-sm">
                    <button type="button" class="btn btn-secondary btn-sm" id="zone2-button-edit">Edit</button>
                    <button type="button" class="btn btn-secondary btn-sm" id="zone2-button-save">Save</button>
                </div>
            </div>
            <div class="col-md-1 bordered" id="zone3-section">
                <p>Zone 3</p>
                <div class="btn-group-horizontal btn-group-sm">
                    <button type="button" class="btn btn-secondary btn-sm" id="zone3-button-edit">Edit</button>
                    <button type="button" class="btn btn-secondary btn-sm" id="zone3-button-save">Save</button>
                </div>
            </div>
            <div class="col-md-2 bordered" id="clock-section">
                <div class="clock" id="clock">

                </div>
            </div>
            <div class="col-md-3 bordered" id="show-section">
                <p>SHOW</p>
                <div class="btn-group-horizontal btn-group-sm">
                    <button class="btn btn-secondary btn-sm dropdown-toggle" id="show-orders-button" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Show Orders
                    </button>

                    <button class="btn btn-secondary btn-sm dropdown-toggle" onclick="closeOrdersList()">Close</button>
                    <button class="btn btn-secondary btn-sm dropdown-toggle" id="get-markers-button" @*onclick="getMarkers()"*@>Get Markers</button>

                    @*<a class="dropdown-item" href="#"></a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>*@
                </div>
            </div>
        </div>
    </div>
    <div id="map" style="margin-top: -20px"></div>
    <!-- ko with: newOrder -->
    @Html.Partial("~/Views/Webmap/OrderForm.cshtml", null, new ViewDataDictionary())
    @Html.Partial("~/Views/Webmap/OrdersList.cshtml", null, new ViewDataDictionary())

    <!-- /ko -->
}

@section HeadStyleSection {


}

@section BottomScripts{




    <script src="~/Scripts/clock.js" onload="startTime()"></script>
    <script src="~/Scripts/autocompletion.js" @*onload="initAutocomplete()"*@></script>

    <script src="~/Scripts/map.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCpiNFqB5YUDucRFF1gzDU9XXTAY2BiXa4&libraries=places&callback=initMap" async defer>
    </script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.pubnub.com/sdk/javascript/pubnub.4.19.0.min.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/showorders.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/signalr/js"></script>

    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/app")


}

